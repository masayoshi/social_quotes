<div class="page-header">
  <h2>Sign in</h2>    
</div>
<div class="row">
  <div class="span10">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <fieldset>
        <div class="clearfix">
          <%= f.label :email %>
          <div class="input">
            <%= f.email_field :email %>
          </div>
        </div>
        <div class="clearfix">
          <%= f.label :password %>
          <div class="input">
            <%= f.password_field :password %>
          </div>
        </div>
        <div class="clearfix">
          <%= f.label :remember_me %>
          <div class="input">
            <%= f.check_box :remember_me %>
          </div>
        </div>
        <div class="actions">
          <%= f.submit "Sign in", :class => "btn primary", :name => "commit" %>
        </div>
      </fieldset>
    <% end -%>
  </div>
  <div class="span6">
    <%= render :partial => "devise/shared/links" %>
  </div>
</div>
