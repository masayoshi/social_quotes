<%= form_for(@quote) do |f| %>
  <% if @quote.errors.any? %>
    <div class="alert-message block-message error">
      <h3><%= pluralize(@quote.errors.count, "error") %> prohibited this quote from being saved:</h3>

      <ul>
        <% @quote.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <div class="clearfix">
      <%= f.label :body, 'Quote' %>
      <div class="input">
        <%= f.text_area :body, :class => "xxlarge", :rows => "5" %>
        <span class="help-block">Quote body : Max 500 caracters</span>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :reference, 'Quote from' %>
      <div class="input">
        <%= f.text_field :reference, :class => "xxlarge" %>
        <span class="help-block">Reference Person,Book etc : Max 100 caracters</span>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :tag_list, 'Tags' %>
      <div class="input">
        <%= f.text_field :tag_list, :class => "xxlarge" %>
        <span class="help-block">Input Tags (Camma separated : tag1, tag2, tag3 )</span>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :remark, 'Remark' %>
      <div class="input">
        <%= f.text_area :remark, :class => "xxlarge", :rows => "5" %>
        <span class="help-block">Remark about this Quote : Max 500 caracters</span>
      </div>
    </div>
    <div class="clearfix">
      <% if current_user.services.find_by_provider('twitter').present? -%>

      <div class="input">
        <%= check_box_tag 'twitter', 'yes', true %> Tweet on Twitter
      </div>
      <% end %>
    </div>
    <div class="actions">
      <%= f.submit "Submit", :class => "btn primary", :name => "commit" %>
    </div>
  </fieldset>
  
<% end %>
