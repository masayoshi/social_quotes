<% if user_signed_in? -%>
  <%= link_to 'New Quote', new_quote_path, class: "btn primary" %>
<% else -%>
  <%= link_to "Sign up", new_user_registration_path %><br />
  <%= link_to "Sign in", new_user_session_path %>
<% end -%>
<div class="page-header", style="margin-top: 10px">
</div>
<% if @user.present? -%>
  <h2><%= @user.username %></h2><br />
  <%= gravatar_image_tag(@user.email) %>
  <h3>Quotes : <%= link_to @user.quotes.count, quotes_path(user_id: @user.id) %></h3>
  <div class="page-header", style="margin-top: 10px">
  </div>
<% end -%>
<% if @tags.present? -%>
  <% tag_cloud(@tags, %w(css1 css2 css3 css4)) do |tag, css_class| %>
    <%= link_to tag.name, quotes_path(tag: tag.name), :class => css_class %>
  <% end %>
<% end %>
